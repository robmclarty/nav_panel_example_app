<h1>Listing posts</h1>

<% if current_user %>
  <%= local_admin_link_to 'New Post', new_post_path, :class => 'new' %>
<% end %>

<table>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) if current_user %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if current_user %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Login', login_path %>
